Include /etc/apache2/sites-enabled/[^.#]*                     |~                                                             
<Files ~ "\.(pl|cgi)$">                                       |~                                                             
SetHandler perl-script                                        |~                                                             
PerlResponseHandler ModPerl::PerlRun                          |~                                                             
Options +ExecCGI                                              |~                                                             
PerlSendHeader On                                             |~                                                             
</Files>  

#put above apache2.conf or mods-enabled/perl.conf
