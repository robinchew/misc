#LET USER USE SUDO
#/etc/sudoers

#users with group 'root' gets to use sudo
%root ALL=(ALL) ALL


#DISABLE ROOT PASSWORD
#lock account
sudo passwd -l root

#grant sudo to specific group with permission to run specific file
User_Alias FM_GROUP = %fm_group
FM_GROUP ALL=(root) NOPASSWD: /etc/init.d/apache2
